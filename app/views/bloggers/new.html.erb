<h3>Create a New Blogger</h3>

<%= link_to "Home", application_index_path %></br></br>
<%= link_to "See all Bloggers", bloggers_path %></br></br>


<% if @blogger.errors.any? %>
    <div id="error_explanation">
        <h2>Errors:</h2>
        <ul>
            <% @blogger.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
        </div>
<% end %>


<%= form_for (@blogger) do |f| %>
    <div>
        Blogger Name: <%= f.text_field :name %>
    </div>
    <div>
        Blogger Bio: <%= f.text_field :bio %>
    </div>
    <div>
        Blogger Age: <%= f.text_field :age %>
    </div>

    <%= f.submit %>
<% end %>